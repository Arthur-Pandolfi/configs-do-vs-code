{
    // Edição do edtior de texto
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 14,
    "editor.lineHeight": 1.47,
    "editor.rulers": [155],
    "editor.minimap.autohide": true,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.wordWrap": "on",
    "editor.renderLineHighlight": "all",
    "editor.fontLigatures": true,
    "editor.semanticHighlighting.enabled": false,
    "editor.selectionHighlight": false,
    "editor.occurrencesHighlight": "off",
    "editor.tokenColorCustomizations": {
    "textMateRules": [
        {
            "scope": ["constant.numeric"],
            "settings": {
                "foreground": "#8469b1"
                }
            },
            {
                "scope": ["comment"],
                "settings": {
                    "foreground": "#c3bbbb",
                    "fontStyle": ""
             }
            },
        
        ]
    },
    "editor.largeFileOptimizations": false,
    "editor.linkedEditing": true,

    // Edição da área de trabalho
    "workbench.colorTheme": "One Dark Pro Mix",
    "workbench.editor.labelFormat": "short",
    "workbench.editor.empty.hint": "hidden",
    "workbench.iconTheme": "eq-material-theme-icons-deepforest",

    // Edição do Explorer
    "explorer.autoOpenDroppedFile": true,
    "explorer.confirmDragAndDrop": false,
    "explorer.autoReveal": true,
    "explorer.compactFolders": false,
    "explorer.decorations.colors": true,
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "package.json": ".eslint*, prettier*, tsconfig*, vite*, pnpm-lock*, package-lock*, bun.lock*",
        "tailwind.config*": "tailwind.config*, postcss.config*",
        ".env.local": ".env*"
        
    },
    "explorer.confirmDelete": false,

    // Edição de Arquivos
    "files.autoSave": "afterDelay",

    // Edição da Janela
    "window.commandCenter": true,
    "window.titleBarStyle": "custom",
    "window.density.editorTabHeight": "default",

    // Configuração do Terminal
    "terminal.integrated.fontFamily": "JetBrains Mono",
    "terminal.integrated.sendKeybindingsToShell": true,
    "terminal.integrated.fontSize": 14.8,
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        },
        "Bash": {
            "path": "C:\\Program Files\\Git\\bin\\bash.exe",
            "args": []
        }
    },
    "terminal.integrated.defaultProfile.windows": "Bash",


    // Configuração de Segurança
    "security.workspace.trust.untrustedFiles": "open",
    

    // Telemetria
    "redhat.telemetry.enabled": false,
    

}
